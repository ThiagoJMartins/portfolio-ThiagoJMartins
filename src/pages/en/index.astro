---
import MyWork from '../../components/my-work.astro'
import Experience from '../../components/Experience.astro'
import About from '../../components/About.astro'
import Hero from '../../components/Hero.astro'
import Layout from '../../layouts/Layout.astro'
import Footer from '../../components/Footer.astro'
import Contact from '../../components/Contact.astro'
import { getContent, languageRoutes } from '../../utils/content'

const lang = 'en'
const content = getContent(lang)
const basePath = languageRoutes[lang]
---

<Layout title={content.meta.title} lang={lang} content={content}>
  <Hero hero={content.hero} socialLinks={content.socialLinks} />
  <About about={content.about} />
  <Experience experience={content.experience} />
  <MyWork myWork={content.myWork} />
  <Contact contact={content.contact} />
  <Footer
    footer={content.footer}
    navigation={content.navigation}
    socialLinks={content.socialLinks}
    basePath={basePath}
  />
</Layout>
