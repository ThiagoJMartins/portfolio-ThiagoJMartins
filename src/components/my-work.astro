---
import { certifications, projects, skillGroups } from '../utils/content'

const projectBadge = (isClient?: boolean) => (isClient ? 'Client project' : 'Personal project')
const projectBadgeColor = (isClient?: boolean) =>
  isClient
    ? 'bg-[#0CA000]/15 text-[#0CA000] dark:bg-[#06C300]/20 dark:text-[#06C300]'
    : 'bg-[#31633D]/15 text-[#31633D] dark:bg-[#06C300]/15 dark:text-[#06C300]'
---

<section id="my-work" class="w-full space-y-12">
  <h2>My Work</h2>

  <article class="space-y-6">
    <header class="flex flex-col gap-2">
      <h3 class="text-2xl font-semibold text-slate-900 dark:text-white">Projects & Collaborations</h3>
      <p class="text-sm text-slate-600 dark:text-slate-300">
        A mix of client engagements and personal explorations where I helped shape product strategy, architecture and the front-to-back implementation.
      </p>
    </header>
    <div class="grid gap-6 sm:grid-cols-2 xl:grid-cols-3">
      {projects.map((project) => (
        <article class="flex h-full flex-col overflow-hidden rounded-3xl border border-slate-200 bg-white/80 shadow-sm shadow-slate-400/20 transition hover:-translate-y-1 hover:shadow-md hover:shadow-slate-400/30 dark:border-slate-700 dark:bg-slate-900/60 dark:shadow-black/30">
          <div class="relative aspect-[4/3] overflow-hidden">
            <img
              src={project.image}
              alt={project.name}
              width="640"
              height="480"
              class="h-full w-full object-cover transition duration-300 hover:scale-105"
              loading="lazy"
            />
            <div class="absolute inset-x-0 bottom-0 flex flex-wrap gap-2 bg-gradient-to-t from-black/70 via-black/40 to-transparent p-3 text-xs font-medium uppercase tracking-[0.3em] text-white/80">
              {project.skills.slice(0, 3).map((skill) => (
                <span>{skill}</span>
              ))}
              {project.skills.length > 3 && <span>+{project.skills.length - 3} more</span>}
            </div>
          </div>
          <div class="flex flex-1 flex-col gap-4 p-5">
            <div class="flex items-start justify-between gap-3">
              <h4 class="text-lg font-semibold text-slate-900 dark:text-white">{project.name}</h4>
              <span class={`rounded-full px-3 py-1 text-xs font-semibold uppercase tracking-wide ${projectBadgeColor(project.job)}`}>
                {projectBadge(project.job)}
              </span>
            </div>
            <p class="flex-1 text-sm text-slate-600 dark:text-slate-300">{project.description}</p>
            <div class="flex flex-wrap gap-2 text-xs text-slate-600 dark:text-slate-300">
              {project.skills.map((skill) => (
                <span class="rounded-full bg-slate-100 px-3 py-1 dark:bg-slate-800">{skill}</span>
              ))}
            </div>
            <a
              href={project.demo}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-sm font-semibold text-[#31633D] transition hover:text-[#0CA000] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#06C300] dark:text-[#06C300] dark:hover:text-white"
            >
              Visit project
              <span aria-hidden="true">↗</span>
            </a>
          </div>
        </article>
      ))}
    </div>
  </article>

  <article class="space-y-6">
    <header class="flex flex-col gap-2">
      <h3 class="text-2xl font-semibold text-slate-900 dark:text-white">Skills & Tooling</h3>
      <p class="text-sm text-slate-600 dark:text-slate-300">
        Technologies I rely on to build resilient products. I combine them depending on the project’s goals and constraints.
      </p>
    </header>
    <div class="grid gap-5 md:grid-cols-2">
      {skillGroups.map((group) => (
        <div class="rounded-3xl border border-slate-200 bg-white/80 p-5 shadow-sm shadow-slate-400/20 dark:border-slate-700 dark:bg-slate-900/60 dark:shadow-black/30">
          <h4 class="text-lg font-semibold text-slate-900 dark:text-white">{group.title}</h4>
          <ul class="mt-4 grid grid-cols-2 gap-3 sm:grid-cols-3">
            {group.items.map((skill) => (
              <li class="flex items-center gap-3 rounded-2xl bg-white/70 p-3 text-sm font-medium text-slate-600 shadow-sm shadow-slate-200/60 transition hover:-translate-y-1 hover:shadow-md hover:shadow-slate-300/40 dark:bg-slate-900/60 dark:text-slate-200 dark:shadow-black/30">
                <img src={`/skills/${skill.slug}.svg`} alt="" aria-hidden="true" class="h-7 w-7" />
                <span>{skill.label}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </article>

  <article class="space-y-6">
    <header class="flex flex-col gap-2">
      <h3 class="text-2xl font-semibold text-slate-900 dark:text-white">Certifications & Continuous Learning</h3>
      <p class="text-sm text-slate-600 dark:text-slate-300">
        A snapshot of the structured learning paths I’ve completed to stay ahead and bring fresh perspectives to my work.
      </p>
    </header>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {certifications.map((certification) => (
        <a
          href={certification.url}
          target="_blank"
          rel="noopener noreferrer"
          class="group flex flex-col overflow-hidden rounded-3xl border border-slate-200 bg-white/80 p-5 text-left shadow-sm shadow-slate-400/20 transition hover:-translate-y-1 hover:shadow-md hover:shadow-slate-400/40 dark:border-slate-700 dark:bg-slate-900/60 dark:shadow-black/30"
        >
          <img
            src={certification.image}
            alt={certification.name}
            width="480"
            height="320"
            class="h-40 w-full rounded-2xl object-contain bg-white/80 p-4 transition duration-300 group-hover:scale-[1.02]"
            loading="lazy"
          />
          <div class="mt-5 flex flex-col gap-2">
            <span class="text-lg font-semibold text-slate-900 dark:text-white">{certification.name}</span>
            <span class="text-sm font-medium text-slate-500 dark:text-slate-300">{certification.organization} · {certification.date}</span>
            {certification.description && (
              <p class="text-sm text-slate-600 dark:text-slate-300">{certification.description}</p>
            )}
          </div>
        </a>
      ))}
    </div>
  </article>
</section>
