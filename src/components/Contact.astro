---
import type { SiteContent } from '../utils/content'

interface Props {
  contact: SiteContent['contact']
}

const { contact } = Astro.props
---

<section id="contact" class="w-full space-y-8">
  <div class="grid gap-8 md:grid-cols-[minmax(0,1.1fr)_minmax(0,1fr)]">
    <article class="space-y-4 text-base text-slate-600 dark:text-slate-300 md:text-lg">
      <h2 class="text-3xl font-extrabold leading-tight text-slate-900 dark:text-white">{contact.title}</h2>
      {contact.paragraphs.map((paragraph) => (
        <p>{paragraph}</p>
      ))}
      <ul class="grid gap-2 text-sm text-slate-600 dark:text-slate-300 md:text-base">
        {contact.bullets.map((bullet) => (
          <li class="flex items-start gap-2">
            <span aria-hidden="true" class="mt-1 inline-flex h-2 w-2 shrink-0 rounded-full bg-[#0CA000] dark:bg-[#06C300]"></span>
            <span>{bullet}</span>
          </li>
        ))}
      </ul>
    </article>

    <aside class="grid gap-5">
      {contact.options.map((option) => (
        <a
          href={option.href}
          target={option.href.startsWith('http') ? '_blank' : undefined}
          rel={option.href.startsWith('http') ? 'noopener noreferrer' : undefined}
          class="group flex h-full flex-col gap-4 rounded-3xl border border-slate-200 bg-white/80 p-6 text-left shadow-sm shadow-slate-400/20 transition hover:-translate-y-1 hover:border-[#0CA000] hover:shadow-lg hover:shadow-slate-400/40 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#06C300] dark:border-slate-700 dark:bg-slate-900/60 dark:shadow-black/30 dark:hover:border-[#06C300]"
        >
          <div class="flex h-12 w-12 items-center justify-center rounded-2xl bg-[#0CA000]/10 text-[#0CA000] transition group-hover:bg-[#0CA000]/20 dark:bg-[#06C300]/15 dark:text-[#06C300] dark:group-hover:bg-[#06C300]/25">
            <img src={option.icon} alt="" aria-hidden="true" class="h-6 w-6 dark:brightness-200 dark:invert" />
          </div>
          <div class="space-y-2">
            <span class="text-base font-semibold text-slate-900 transition group-hover:text-[#0CA000] dark:text-white dark:group-hover:text-[#06C300]">
              {option.label}
            </span>
            <p class="text-sm text-slate-600 dark:text-slate-300">{option.description}</p>
          </div>
        </a>
      ))}
    </aside>
  </div>

  <div class="rounded-[28px] border border-dashed border-[#31633D]/40 bg-white/75 p-6 text-sm text-slate-600 shadow-sm shadow-[#31633D]/15 dark:border-[#06C300]/40 dark:bg-slate-900/60 dark:text-slate-300 dark:shadow-[#06C300]/15">
    <p>{contact.closing}</p>
  </div>
</section>
