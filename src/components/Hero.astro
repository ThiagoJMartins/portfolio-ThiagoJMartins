---
import type { SiteContent } from '../utils/content'

interface Props {
  hero: SiteContent['hero']
  socialLinks: SiteContent['socialLinks']
}

const { hero, socialLinks } = Astro.props
---

<section id="home" class="relative w-full py-12 md:py-16">
  <div class="pointer-events-none absolute inset-0 -z-10 overflow-hidden">
    <div class="absolute -left-24 top-6 h-72 w-72 rounded-full bg-[#0CA000]/20 blur-3xl dark:bg-[#06C300]/20"></div>
    <div class="absolute bottom-0 right-[-10%] h-96 w-96 rounded-full bg-[#31633D]/10 blur-[120px] dark:bg-[#0CA000]/10"></div>
  </div>

  <div
    class="relative grid gap-10 overflow-hidden rounded-[32px] border border-white/40 bg-white/85 p-6 text-slate-900 shadow-xl shadow-slate-400/20 backdrop-blur-lg dark:border-slate-700 dark:bg-slate-900/70 dark:text-slate-100 dark:shadow-black/40 md:grid-cols-[minmax(0,1.25fr)_minmax(0,1fr)] md:p-10"
  >
    <article class="flex flex-col gap-6">
      <div class="inline-flex w-fit items-center gap-2 rounded-full border border-slate-200 bg-white/70 px-4 py-1 text-xs font-semibold uppercase tracking-[0.4em] text-slate-500 dark:border-slate-600 dark:bg-slate-900/70 dark:text-slate-300">
        {hero.badge}
      </div>
      <h1 class="text-3xl font-black leading-tight tracking-tight md:text-5xl">
        {hero.title}
      </h1>
      <p class="max-w-2xl text-base text-slate-600 dark:text-slate-300 md:text-lg">
        {hero.description}
      </p>
      <ul class="grid gap-3 text-sm text-slate-600 dark:text-slate-300 md:text-base">
        {hero.sellingPoints.map((item) => (
          <li class="flex items-start gap-3">
            <span aria-hidden="true" class="mt-[6px] inline-flex h-2.5 w-2.5 shrink-0 rounded-full bg-[#0CA000] dark:bg-[#06C300]"></span>
            <span>{item}</span>
          </li>
        ))}
      </ul>

      <div class="flex flex-wrap items-center gap-4 pt-2">
        <a
          href={hero.primaryCta.href}
          class="inline-flex items-center gap-2 rounded-full bg-[#0CA000] px-5 py-2.5 text-sm font-semibold text-slate-950 transition hover:bg-[#0CA000]/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#06C300] dark:bg-[#06C300] dark:text-slate-900"
        >
          <img
            src={hero.primaryCta.icon}
            width="22"
            height="22"
            alt=""
            aria-hidden="true"
            class="h-5 w-5 dark:brightness-200 dark:invert"
          />
          {hero.primaryCta.label}
        </a>
        <a
          href={hero.secondaryCta.href}
          target={hero.secondaryCta.target}
          rel={hero.secondaryCta.rel}
          class="inline-flex items-center gap-2 rounded-full border border-slate-300 px-5 py-2.5 text-sm font-semibold text-slate-700 transition hover:border-[#0CA000] hover:text-[#0CA000] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#06C300] dark:border-slate-600 dark:text-slate-200 dark:hover:border-[#06C300] dark:hover:text-[#06C300]"
        >
          <img src={hero.secondaryCta.icon} width="18" height="18" alt="" aria-hidden="true" />
          {hero.secondaryCta.label}
        </a>
      </div>

      <div class="flex flex-col gap-4 rounded-3xl border border-dashed border-[#31633D]/40 bg-white/70 p-5 text-sm text-slate-600 shadow-sm shadow-[#31633D]/10 dark:border-[#06C300]/40 dark:bg-slate-900/60 dark:text-slate-300 dark:shadow-[#06C300]/15">
        <span class="text-xs font-semibold uppercase tracking-[0.4em] text-[#31633D] dark:text-[#06C300]">
          {hero.support.badge}
        </span>
        <div class="flex flex-wrap gap-2 text-xs font-semibold uppercase tracking-[0.3em] text-slate-500 dark:text-slate-400">
          {hero.support.commitments.map((commitment) => (
            <span class="rounded-full bg-slate-200/70 px-3 py-1 dark:bg-slate-800/70">{commitment}</span>
          ))}
        </div>
        <p>{hero.support.description}</p>
      </div>

      <div class="flex flex-wrap items-center gap-4 pt-2 text-sm text-slate-500 dark:text-slate-400">
        <span class="uppercase tracking-[0.35em]">{hero.socialLabel}</span>
        <div class="flex items-center gap-2">
          {socialLinks.map((link) => (
            <a
              href={link.href}
              target={link.href.startsWith('http') ? '_blank' : undefined}
              rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
              class="flex h-10 w-10 items-center justify-center rounded-full border border-slate-300 bg-white/80 text-slate-700 transition hover:border-[#0CA000] hover:text-[#0CA000] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#06C300] dark:border-slate-600 dark:bg-slate-800/70 dark:text-slate-200 dark:hover:border-[#06C300] dark:hover:text-[#06C300]"
            >
              <img
                src={link.icon}
                width="20"
                height="20"
                alt=""
                aria-hidden="true"
                class="h-5 w-5 dark:brightness-200 dark:invert"
              />
              <span class="sr-only">{link.label}</span>
            </a>
          ))}
        </div>
      </div>
    </article>

    <aside class="relative flex flex-col gap-6">
      <div class="absolute -right-20 top-4 hidden h-40 w-40 rounded-full bg-[#0CA000]/15 blur-3xl dark:bg-[#06C300]/15 md:block"></div>
      <div class="relative overflow-hidden rounded-[28px] border border-white/60 bg-gradient-to-b from-[#ecf6ef] to-white p-5 shadow-2xl shadow-slate-400/40 dark:border-slate-700 dark:from-[#182337] dark:to-[#111a2b] dark:shadow-black/40">
        <div class="rounded-2xl bg-white/75 p-6 text-center dark:bg-slate-900/70">
          <img
            class="mx-auto h-auto w-48 rounded-full object-cover shadow-xl shadow-slate-300/50 dark:shadow-black/60"
            width="256"
            height="256"
            src="/Photo.webp"
            alt={hero.profile.alt}
          />
          <p class="mt-5 text-sm font-semibold uppercase tracking-[0.4em] text-[#31633D] dark:text-[#06C300]">
            {hero.profile.badge}
          </p>
          <p class="mt-2 text-sm text-slate-600 dark:text-slate-300">{hero.profile.description}</p>
        </div>
      </div>

      <div class="grid gap-4 rounded-[24px] border border-slate-200 bg-white/80 p-5 shadow-sm shadow-slate-400/20 dark:border-slate-700 dark:bg-slate-900/70 dark:shadow-black/30 sm:grid-cols-3">
        {hero.stats.map((item) => (
          <div class="flex flex-col gap-1 rounded-2xl bg-white/70 p-4 text-center shadow-sm shadow-slate-200/60 dark:bg-slate-900/70 dark:shadow-black/30">
            <span class="text-3xl font-black text-[#31633D] dark:text-[#06C300]">{item.value}</span>
            <span class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500 dark:text-slate-400">{item.label}</span>
          </div>
        ))}
      </div>

      <div class="flex flex-col gap-3 rounded-3xl border border-slate-200 bg-white/80 p-5 text-sm text-slate-600 shadow-sm shadow-slate-400/30 dark:border-slate-700 dark:bg-slate-900/70 dark:text-slate-300 dark:shadow-black/40">
        <span class="text-xs font-semibold uppercase tracking-[0.35em] text-[#31633D] dark:text-[#06C300]">
          {hero.availability.label}
        </span>
        <p>{hero.availability.description}</p>
      </div>
    </aside>
  </div>
</section>
