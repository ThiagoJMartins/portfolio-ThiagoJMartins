---
const skills = [
  ['html', 'HTML'],
  ['css', 'CSS'],
  ['javascript', 'JavaScript'],
  ['typescript', 'TypeScript'],
  ['nodejs', 'NodeJS'],
  ['express', 'Express'],
  ['react', 'React'],
  ['astro', 'Astro'],
  ['next', 'NextJS'],
  ['tailwind', 'Tailwind'],
  ['redux', 'Redux'],
  ['sequelize', 'Sequelize'],
  ['postgresql', 'PostgreSQL'],
  ['mongo', 'MongoDB'],
  ['firebase', 'Firebase'],
  ['cloudinary','Cloudinary']
]

import { data } from '../utils/projects-resource.js'
---

<section id="my-job" class="">
  <h2>My Work</h2>
  <div class="flex flex-col-reverse mt-4 gap-10">
    <article class="flex flex-col w-full">
      <h3 class="dark:text-[#06C300] text-[#31633D] text-2xl font-bold mx-auto">
        Skills
      </h3>
      <div
        class="grid grid-cols-3 gap-4 w-full md:flex md:flex-wrap md:justify-center md:gap-4 mt-6 md:px-14">
        {
          skills.map((skill) => (
            <div class="grid place-items-center rounded-lg bg-slate-800 dark:bg-slate-700 gap-3 p-1 px-2 transition ease-in-out hover:-translate-y-1 hover:scale-115 duration-300">
              <img
                class="object-contain h-8 justify-start"
                width="70"
                height="70"
                src={`/skills/${skill[0]}.svg`}
                alt={skill[1]}
              />
              <span class="font-semibold text-slate-400 dark:text-slate-300">{skill[1]}</span>
            </div>
          ))
        }
      </div>
    </article>
 <article class="flex flex-col w-full">
  <h3 class="dark:text-[#06C300] text-[#31633D] text-2xl font-bold mx-auto">Projects</h3>
  <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-3 w-full justify-center mt-4">
    {
      data.map((project) => (
        <div class="relative p-2 dark:bg-slate-800 bg-slate-300 shadow-sm shadow-slate-400 dark:shadow-slate-600 rounded-lg transition ease-in-out duration-300 hover:scale-105">
          <div class="mx-2 mt-2 mb-16 absolute inset-0 flex flex-wrap items-center justify-center opacity-0 hover:opacity-100 transition duration-300 hover:bg-[#000000d7] rounded-md">
              {project.skills.map((skill) => (
                <img
                  class="object-contain h-8"
                  width="70"
                  height="70"
                  src={`/skills/${skill.toLocaleLowerCase()}.svg`}
                  alt={skill}
                />
              ))}
          </div>
          <div >            
            <img
            class="h-auto object-contain rounded-md "
            src={project.image}
            alt={project.name}
            width="450px"
          />
            <div class="flex w-full justify-between mt-8">
            <h4 class="font-bold">{project.name}</h4>
            <a
              class="font-medium"
              href={project.demo}
              target="_blank"
              rel="noopener noreferrer"
            >
              Demo
            </a>
            </div>
          </div>
          
        </div>
      ))
    }
  </div>
</article>
  </div>
</section>
